datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String    @id @default(uuid())
  userName  String
  password  String
  access    String    @default("clerk")
  lang      String?   @default("sp")
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt
}

model Worker {
  id           String        @id @default(uuid())
  firstName    String
  lastName     String
  phone        String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime?     @updatedAt
  debt         Debt[]
  salaryAmount Int
  salary       Salary[]
  debtPayment  DebtPayment[]
}

model Debt {
  id        String   @id @default(uuid())
  amount    Int
  createdAt DateTime
  workerId  String
  worker    Worker   @relation(fields: [workerId], references: [id])
}

model Salary {
  id           String  @id @default(uuid())
  salaryPaid   Int
  salaryAmount Int
  Worker       Worker? @relation(fields: [workerId], references: [id])
  workerId     String?
}

model DebtPayment {
  id       String  @id @default(uuid())
  amount   Int
  Worker   Worker? @relation(fields: [workerId], references: [id])
  workerId String?
}
